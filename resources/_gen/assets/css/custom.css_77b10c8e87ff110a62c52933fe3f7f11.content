@charset "UTF-8";.button-container{margin-top:20px;display:flex;flex-direction:column;justify-content:center;align-items:center;min-height:60vh;gap:15px}.button-container .button{display:inline-block;padding:15px 30px;background-color:#6c757d;color:#fff;text-decoration:none;border-radius:5px;font-size:16px;font-family:helvetica neue,sans-serif;text-align:center;width:200px;max-width:250px;transition:background-color .3s ease,transform .2s ease;box-shadow:0 2px 5px rgba(0,0,0,.1)}.button-container .button:hover{background-color:#5a6268;transform:scale(1.05)}.button-container .button:active{background-color:#545b62;transform:scale(.98)}.tag-cloud{margin-top:1rem;display:flex;gap:.5rem;flex-wrap:wrap}.tag-button{padding:.2rem .5rem;background:#4a90e2;color:#fff;border:none;border-radius:3px;cursor:pointer;transition:all .2s;font-weight:500}.tag-button:hover:not(:disabled){background:#357abd;transform:translateY(-2px)}.tag-button:active{background:#2c5aa8}@media(max-width:768px){.tag-button{padding:.2rem .36rem}}.edit-button{flex-shrink:0;transform:translateY(1px)}@media(max-width:768px){.article-header{flex-wrap:wrap;gap:.4rem}.edit-button{position:static;transform:none;order:1}}